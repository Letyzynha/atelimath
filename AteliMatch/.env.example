# Exemplo de arquivo de configuração de ambiente
# Copie este arquivo para .env e ajuste os valores conforme necessário

# Configurações do Django
DJANGO_SECRET_KEY='change-this-to-a-secure-secret-key'

# Configuração do Banco de Dados
# SQLite (desenvolvimento)
DATABASE_URL='sqlite:///db.sqlite3'
# PostgreSQL (produção)
# DATABASE_URL='postgres://user:password@host:5432/dbname'

# Hosts permitidos
ALLOWED_HOSTS='127.0.0.1,localhost'

# Modo de Debug
DEBUG=True

# ID de Acompanhamento do Microsoft Clarity
CLARITY_ID='your-clarity-id'

# Habilitar PWA
ENABLE_PWA=False

# Configurações de Email
EMAIL_BACKEND='django.core.mail.backends.console.EmailBackend'
